@{
    Layout = "_LayoutAuthentication";
    ViewData["Title"] = "Sign In";
    var ReturnUrl = ViewBag.ReturnUrl;
}

<div class="container-md">
    <div class="row vh-100 d-flex justify-content-center">
        <div class="col-12 align-self-center">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4 mx-auto">
                        <div class="card">
                            <div class="card-body p-0 auth-header-box">
                                <div class="text-center p-4">
                                    <a href="index.html" class="logo logo-admin">
                                        <img src="~/images/logos/logo.jpeg" alt="Xente"
                                             class="auth-logo">
                                    </a>
                                    <h4 class="mt-4 mb-1 fw-semibold font-18">Inco Management Portal</h4>
                                    <p class="text-muted  mb-0">Login into your account</p>
                                </div>
                            </div>
                            <div class="card-body pt-0">
                                <form class="auth-form my-4" id="signIn" name="signIn" method="post" autocomplete="off">
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        <label for="username">Username</label>
                                        <div class="input-group mb-3">
                                            <span class="auth-form-icon">
                                                <i class="dripicons-user"></i>
                                            </span>
                                            <input type="text" class="form-control" placeholder="Enter email">
                                        </div>
                                    </div><!--end form-group-->

                                    <div class="form-group">
                                        <label for="userpassword">Password</label>
                                        <div class="input-group mb-3">
                                            <span class="auth-form-icon">
                                                <i class="dripicons-lock"></i>
                                            </span>
                                            <input type="password" class="form-control" placeholder="Enter password">
                                        </div>
                                    </div><!--end form-group-->

                                    <div class="form-group row mt-4">
                                        <div class="col-sm-12 text-center">
                                            <a asp-action="Passwordreset" asp-controller="Authentication" class="text-muted font-13"><i class="dripicons-lock"></i> Forgot password?</a>
                                        </div><!--end col-->
                                    </div><!--end form-group-->
                                   @* <input id="returnUrl" type="hidden" asp-for="ReturnUrl" value="" />*@
                                    <div class="form-group mb-0 row">
                                            <div class="col-12">
                                                <div class="d-grid mt-3">
                                                    <button class="btn btn-outline-primary btn-round d-flex mx-auto justify-content-center" style="min-width:200px;" type="submit" id="signin-submit-button">SignIn </button>
                                                </div>
                                            </div>
                                            <!--end col-->
                                        </div>
                                </form><!--end form-->
                                <div class="m-3 text-center text-muted">
                                    <p class="mb-0">
                                        Don't have an account ? <a asp-action="Signup" asp-controller="Authentication" class="text-primary ms-2">Free Register</a>
                                    </p>
                                </div>
                            </div>
                            <!--end card-body-->
                        </div>
                        <!--end card-->
                    </div>
                    <!--end col-->
                </div>
                <!--end row-->
            </div>
            <!--end card-body-->
        </div>
        <!--end col-->
    </div>
    <!--end row-->
</div>
